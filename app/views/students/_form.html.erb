<% if flash[:errors] %>
<ul>
    <% flash[:errors].each do |error| %>
        <li><%= error %></li>
    <% end %>
</ul>
<% end %>
<br>
<h1>Student Form</h1>
<br>
<%= form_for @student do |f| %>
<label><b>Name: </b></label>
<%= f.text_field :name %>
<br>
<br>
<label><b>Age: </b></label>
<%= f.number_field :age %>
<br>
<br>
<label><b>Grade: </b></label>
<%= f.number_field :grade %>
<br>
<br>
<%= f.submit %>
<% end %>